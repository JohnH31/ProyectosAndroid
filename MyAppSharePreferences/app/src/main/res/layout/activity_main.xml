<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SharePreferences2"
        android:textSize="25sp"
        android:layout_gravity="center"
        android:layout_margin="10sp"
        android:textColor="@color/black"/>

    <EditText
        android:id="@+id/edtNombre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Ingrese un Nombre"
        android:layout_margin="5sp"
        android:textSize="20sp"
        />
    <EditText
        android:id="@+id/edtApellido"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Ingrese un Apellido"
        android:layout_margin="5sp"
        android:textSize="20sp"
        />
    <EditText
        android:id="@+id/edtEdad"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Ingrese una Edad"
        android:layout_margin="5sp"
        android:textSize="20sp"
        android:inputType="number"
        />
    <EditText
        android:id="@+id/edtNit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Ingrese su Nit"
        android:layout_margin="5sp"
        android:textSize="20sp"
        android:inputType="number"
        />
    <Button
        android:id="@+id/btnRegistrar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10sp"
        android:backgroundTint="#00B8D4"
        android:text="Registro"
        android:textSize="20sp"
        android:onClick="onClick"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Datos"
        android:textSize="25sp"
        android:layout_gravity="center"
        android:layout_margin="10sp"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/txtNombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_margin="10sp"
        android:text="prueba"
        android:layout_gravity="center"
        android:textColor="#D50000"
        />
    <TextView
        android:id="@+id/txtApellido"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_margin="10sp"
        android:text="prueba"
        android:layout_gravity="center"
        android:textColor="#D50000"
        />
    <TextView
        android:id="@+id/txtEdad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_margin="10sp"
        android:text="pureba"
        android:layout_gravity="center"
        android:textColor="#D50000"
        />
    <TextView
        android:id="@+id/txtNit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_margin="10sp"
        android:text="pureba"
        android:layout_gravity="center"
        android:textColor="#D50000"
        />
</LinearLayout>