<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/imgLista"
        android:layout_width="180sp"
        android:layout_height="180sp"
        android:layout_centerHorizontal="true"
        android:layout_margin="15sp"
        android:src="@drawable/ic_launcher_background" />
    <TextView
        android:id="@+id/txtNomPintura"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nombre"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:layout_below="@id/imgLista"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10sp"
        />
    <TextView
        android:id="@+id/txtPresioPe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Presio:Q."
        android:textColor="@color/black"
        android:textSize="15sp"
        android:layout_below="@id/txtNomPintura"
        android:layout_marginLeft="112sp"
        android:layout_marginTop="10sp"
        />
    <TextView
        android:id="@+id/txtPresioPintura"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Presio"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:layout_below="@id/txtNomPintura"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10sp"
        />
    <TextView
        android:id="@+id/txtDescripcion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Descripcion"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:layout_below="@id/txtPresioPintura"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10sp"
        />
    <Button
        android:id="@+id/btnEnviar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="15sp"
        android:text="Enviar Datos"
        android:layout_below="@id/txtDescripcion"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:backgroundTint="#5269EC"
        android:onClick="onClick"
        />
</RelativeLayout>